{
  "name": "claude-devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/Gnnng/cc-kit/claude-code:1": {
      "headless": true,
      "launcher": true
    }
  },
  "containerEnv": {
    "LANG": "en_US.UTF-8",
    "LC_ALL": "en_US.UTF-8"
  },
  "runArgs": ["--env-file", "${localWorkspaceFolder}/.devcontainer/.env"],
  "postCreateCommand": "cp .devcontainer/tmux.conf ~/.tmux.conf",
  "remoteUser": "vscode"
}
